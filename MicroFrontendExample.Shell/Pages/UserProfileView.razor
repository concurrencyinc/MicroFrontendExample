@inherits Palermo.BlazorMvc.ViewComponentBase
@using MicroFrontendExample.Shell.Models

<div class="user-profile">
    <div class="avatar-container">
        <img src="https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_1280.png" alt="User Avatar"
            class="avatar-image" />
    </div>
    <div class="user-info">
        <h2>User Profile</h2>
        <p>Name: @User.Name</p>
        <p>Email: @User.Email</p>
        <p>Address: @User.Address</p>
        <p>Phone number: @User.PhoneNumber</p>
    </div>
</div>

<style>
    .avatar-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 150px;
        height: 150px;
        border-radius: 50%;
        background-color: #f5f5f5;
        margin-bottom: 20px;
        margin-left: auto;
        margin-right: auto;
    }

    .avatar-image {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
    }

    .user-info {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
</style>

@code {
    [Parameter]
    public UserModel User { get; set; }
}
